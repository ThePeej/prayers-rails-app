<div class="columns">
	<div class="column is-one-third is-offset-one-third">
    <h1 class="title">Log In</h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render partial: 'devise/registrations/user_info_req', locals:{f: f, type: "text_field", attribute: "email", label: "Email*", icon: "fas fa-envelope"} %>
      <%= render partial: 'devise/registrations/user_info_req', locals:{f: f, type: "password_field", attribute: "password", label: "Password* (6 characters minimum)", icon: "fas fa-lock"} %>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <%= f.submit "Log in", :class => "button is-success"%>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
