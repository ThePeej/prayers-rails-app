<h1 class="title is-2 is-spaced"><%=@group.name%></h1>
<h3 class="subtitle is-5"><%=@group.description%></h3>

<br>
<hr>
<h3 class="title is-4">Members: </h3>
<ul>
  <% @group.members.each do |user| %>
    <a href="/users/<%=user.id%>"><li><%=user.username%><%=" (leader)" if user == @group.leader%></li></a>
  <% end %>
</ul>
<br>

<% if @group.leader == current_user %>

  <%= form_for @group, :url => add_member_path do |f| %>
    <%=f.fields_for :members, @group.members.build do |members_fields|%>
      <%= members_fields.label :name, "Add Member By Name, Email, or Username:", class: "label" %>
      <div class="field has-addons">
        <div class="control">
          <%= members_fields.text_field :name, class: "input"%>
        </div>
        <div class="control">
          <%= members_fields.submit "Add", class: "button is-dark" %>
        </div>
      </div>
    <% end %>
  <% end%>
  
<% end %>

<br><br>
<h3 class="title is-4">Group Prayers:</h3>

<%= render partial: 'group_prayers', collection: @group.show_prayers, as: :prayer %>

<br>

<!-- Group administrative buttons -->
<hr>

<%= render partial: 'admin_buttons', locals: {group: @group} %>